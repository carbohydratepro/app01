<% if @book.errors.any? %>
  <div class="m-2 text-danger">
    <%= @book.errors.count %>errors have occurred.
    <% @book.errors.full_messages.each do |message| %>
  </div>
    <li class="m-2 text-danger"><%= message %></li>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
      <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <h4>Opinion</h4>
        <%= f.text_area :body %></br>
      <div class="field">
        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      </div>
      <% end %>
      
      
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
        
    </div>
  </div>
</div>
<main>